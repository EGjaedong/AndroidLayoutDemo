<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintActivity">

    <Button
        android:id="@+id/goBackToMainFromConstraint"
        android:layout_width="@dimen/go_back_size"
        android:layout_height="@dimen/go_back_size"
        android:background="@color/back_color"
        android:text="@string/go_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/con_hello_width"
        android:layout_height="@dimen/con_hello_height"
        android:text="@string/constraint_hello"
        app:layout_constraintLeft_toLeftOf="@+id/goBackToMainFromConstraint"
        app:layout_constraintTop_toTopOf="@+id/goBackToMainFromConstraint"
        android:layout_marginStart="@dimen/con_hello_margin"
        android:layout_marginTop="@dimen/con_hello_margin"
        android:autoSizeTextType="uniform"
        />

</androidx.constraintlayout.widget.ConstraintLayout>