<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrameLayoutActivity">

    <Button
        android:id="@+id/goBackToMainFromFrame"
        android:layout_width="@dimen/go_back_size"
        android:layout_height="@dimen/go_back_size"
        android:background="@color/back_color"
        android:text="@string/go_back"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/scroll_margin_top">

        <LinearLayout
            android:id="@+id/frameLinearLayoutChild"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
    </ScrollView>
</FrameLayout>